<div class="container">

  <h2 class="mt-5">Information you might want to know</h2>
  <div class="row my-5 align-items-center">
    <div class="col-md-8">
      <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag 'open_map.png', class: 'w-100' %>
    </div>
  </div>

  <div class="row mb-3">
    <h3 class="ml-3">Here are some details about this Job!</h3>
  </div>
  <div class="row ml-3 algin-items-center mb-5">
    <div>
      <img src="https://www.famousbirthsdeaths.com/wp-content/uploads/2018/06/samantha-bee-bio-net-worth-facts.jpg"
           alt=""
           class="avatar-large mr-3">
    </div>
        <div>Created <%= time_ago_in_words(@job.created_at) %> ago </br>by <%= @job.user.first_name %>.</div>
  </div>

  <% if @job.bookings.any? %>
    <div class="alert alert-warning alert-dismissable fade show">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p>There are already others offering to volunteer for this task.</p>
      <p>You can still volunteer, but your generosity might not be necessary :)</p>
    </div>
  <% end %>

  <div class="row">
    <div> Job id : <%= @job.id %>
      <br>
      <%= @job.user.first_name %> needs help on <%= @job.due_date %>
      <br>
      Title : <%= @job.title %>
      <br>
      Description : <%= @job.description %></div>
  </div>

  <div class="row">
    <h3> Job status </h3>
  </div>

  <div class="row">
      <% @job.bookings.each do |booking| %>
      <div class="card">
          <div class="card-body">
            <div class="card-title"> <%= booking.user.first_name %> has already volunteered  </div>
              Waiting for <%= @job.user.first_name%> to confirm
          </div>
      </div>
    <% end %>
    </div>

  <div class="row">
    <% if filter_jobs? == true %>
    <%= link_to "Volunteer for this job", job_quick_create_path(@job), method:'post', class: "btn btn-outline-secondary mb-2" %>
    <% else %>
    <% end %>
  </div>

  <%= link_to "Back to list of jobs", jobs_path, class: "btn btn-outline-secondary mb-2" %>
</div>
