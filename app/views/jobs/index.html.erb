<div class="container">
  <div class="row">
    <h1>Job details</h1>
  </div>
  <div class="row">
    <div id="map"
         class=" rounded shadow"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div class="row">
    <h2>Job listings</h2>
  </div>

  <div class="container ">
    <div class="row">
      <div class="cards-product justify-content-center">
        <% @jobs.each do |job| %>
          <div class="card-product col-12 mx-3 my-3 ">
            <div class="card-product-info">
              <h2><%= link_to job.title, job_path(job) %></h2>
              <p>Help <%= job.user.first_name %> on <%= job.due_date.strftime("%A, %b %d") %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
